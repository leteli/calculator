-
  const buttonsValues = [
    'Rad', 'Deg', 'x!', '(', ')', '%', 'AC',
    'Inv', 'sin', 'ln', 7, 8, 9, '÷',
    'π', 'cos', 'log',  4, 5, 6, '×',
    'e', 'tan', '√', 1, 2, 3, '-',
    'Ans', 'EXP', 'xⁿ', 0, '.', '=', '+'
  ];

  const operatorsRegexp = /\+|\-|\÷|\.|\%|\(|\)|\×/g;

doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Calculator app
    link(rel="stylesheet" href="./src/styles/app.css")
  body
    .container
      .calculator-body
        input.output-field(type="text", value="0", readonly)
        .buttons-grid
          each buttonValue in buttonsValues
            if typeof buttonValue === 'number'
              button.buttons-item.numbers-theme #{buttonValue}
            else if buttonValue === '=' || buttonValue === 'AC'
              button.buttons-item.primary-theme #{buttonValue}
            else if buttonValue.search(operatorsRegexp) !== -1
              button.buttons-item.operators-theme #{buttonValue}
            else
              button.buttons-item #{buttonValue}